@model AppointmentScheduler.Models.ViewModels.RegisterViewModel

<h2>Sign Up</h2>
            <form id="account" method="post" asp-action="Register">
                <h6>Create a new account.</h6>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row pb-3">
                    <label asp-for="Name" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pb-3">
                    <label asp-for="Email" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pb-3">
                    <label asp-for="Password" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pb-3">
                    <label asp-for="ConfirmPassword" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pb-3">
                    <label asp-for="RoleName" class="col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="RoleName" asp-items="@AppointmentScheduler.Utility.Helper.GetRolesForDropDown()" class="form-control">
                            <option>--Select a role--</option>
                        </select>                        
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group pb-2">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Register" class="btn btn-success" />
                    </div>
                </div>
                <p class="col-md-10 offset-2">
                    <a asp-action="Login">Sign In</a>
                </p>                

            </form>

