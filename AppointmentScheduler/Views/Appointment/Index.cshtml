<div class="row">
    @if (TempData.ContainsKey("newAdminCreated"))
    {
        <div class="container">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <strong>Account created for @TempData["newAdminCreated"] </strong>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <div class="container">
        @if (User.IsInRole(AppointmentScheduler.Utility.Helper.Admin))
        {
            <div class="row">                      
                <div class="form-group col-4" id="divDoctorList">
                    <label>Select Doctor</label>
                    @Html.DropDownList("doctorId", new SelectList(ViewBag.DoctorsList, "Id", "Name"), new { @class="form-control select2", @onchange="onDoctorChange();" } )
                </div>                
                <div class="form-group col-3 offset-5">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-secondary float-end">Create Admin</a>
                </div>
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditAppointment" />